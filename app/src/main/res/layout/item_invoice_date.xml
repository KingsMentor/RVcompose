<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:padding="4dp"
                                                   android:orientation="vertical"
                                                   android:background="@color/white"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            tools:text="Invoice Date"
            android:layout_width="0dp"
            android:textColor="#bababa"
            android:textColorHint="@color/btn_grey"
            android:layout_height="wrap_content"
            android:id="@+id/invoice_date_hint" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/invoice_date_txt"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif"
            android:textSize="14sp"/>
    <TextView

            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/invoice_date_txt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif"/>
</androidx.constraintlayout.widget.ConstraintLayout>