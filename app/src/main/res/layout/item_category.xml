<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:background="@color/white"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/category_title" android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/invoice_fulfilment"
            android:layout_marginEnd="8dp" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="#000000"/>
    <ImageView
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:tint="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:id="@+id/invoice_fulfilment" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="#c0c0c0"/>
</androidx.constraintlayout.widget.ConstraintLayout>